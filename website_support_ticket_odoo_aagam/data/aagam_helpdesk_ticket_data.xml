    <record id="aagam_helpdesk_ticket_type_updation" model="aagam.helpdesk.ticket.type">
        <field name="name">Update</field>
    </record>
    
    <record id="helpdesk_ticket_tag_crm" model="aagam.helpdesk.ticket.tag">
        <field name="name">CRM</field>
