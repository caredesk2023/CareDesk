<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

        <record id="aagam_helpdesk_ticket_maintenance_equipment_0311" model="ir.ui.view">
            <field name="name">TO aagam helpdesk ticket maintenance equipment 0311</field>
            <field name="model">aagam.helpdesk.ticket.maintenance.equipment</field>
            <field name="arch" type="xml">
                <tree string="Assign To User" sample="1">
                    <field name="message_needaction" invisible="1"/>
                    <field name="name"/>
                    <field name="assign_date" groups="base.group_no_one"/>
                    <field name="technician_user_id"/>
                    <field name="category_id"/>
                    <field name="activity_exception_decoration" widget="activity_exception"/>
                </tree>
            </field>
        </record>

        <record id="aagam_helpdesk_ticket_maintenance_equipment_0322" model="ir.ui.view">
            <field name="name">TO aagam helpdesk ticket maintenance equipment 0322</field>
            <field name="model">aagam.helpdesk.ticket.maintenance.equipment</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <label for="name" style="font-weight:bold;"/>
                        <h1 style="width:64%; padding-bottom:2%;">
                            <field name="name"/>
                        </h1>
                        <group col="2">
                            <group>
                                <field name="category_id"/>
                            </group>
                            <group>
                                <field name="technician_user_id"/>
                                <field name="assign_date"/>
                                <field name="scrap_date"/>
                                <field name="location"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="note"/>
                            </page>
                            <page string="Product Information" name="product_information">
                                <group col="2">
                                    <group>
                                        <field name="partner_id"/>
                                        <field name="partner_ref"/>
                                        <field name="model"/>
                                        <field name="serial_no"/>
                                    </group>
                                    <group>
                                        <field name="effective_date"/>
                                        <field name="cost"/>
                                        <field name="warranty_date"/>
                                    </group>
                                    <field name="company_id" invisible="1"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="aagam_helpdesk_ticket_maintenance_equipment_0337" model="ir.ui.view">
            <field name="name">aagam.helpdesk.ticket.maintenance.equipment</field>
            <field name="model">aagam.helpdesk.ticket.maintenance.equipment</field>
            <field name="arch" type="xml">
                <kanban sample="1">
                    <field name="name"/>
                    <field name="color"/>
                    <field name="assign_date"/>
                    <field name="technician_user_id"/>
                    <field name="category_id"/>
                    <field name="activity_ids"/>
                    <field name="activity_state"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="{{!selection_mode ? 'oe_kanban_color_' + kanban_getcolor(record.color.raw_value) : ''}} oe_kanban_card oe_kanban_global_click" style="position:relative;">
                                <div class="o_dropdown_kanban dropdown" t-if="!selection_mode">
                                    <a role="button" class="dropdown-toggle o-no-caret btn" data-toggle="dropdown" data-display="static" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                        <span class="fa fa-ellipsis-v"/>
                                    </a>
                                    <div class="dropdown-menu" role="menu">
                                        <t t-if="widget.editable"><a role="menuitem" type="edit" class="dropdown-item">Edit...</a></t>
                                        <t t-if="widget.deletable"><a role="menuitem" type="delete" class="dropdown-item">Delete</a></t>
                                        <div role="separator" class="dropdown-divider"></div>
                                        <div role="separator" class="dropdown-header">Record Colour</div>
                                        <ul class="oe_kanban_colorpicker" data-field="color"/>
                                    </div>
                                </div>
                                <div class="oe_kanban_content">
                                    <div class="o_kanban_record_top">
                                        <b class="o_kanban_record_title font-weight-bold"><field name="name"/><small><span t-if="record.name.raw_value"></span></small></b>
                                    </div>
                                    <div class="o_kanban_record_body">
                                    </div>
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            <!--                                            <div class="badge badge-danger" t-if="!selection_mode">-->
                                            <!--                                                <div class="badge badge-danger" t-if="!selection_mode and record.assign_date.raw_value">-->
                                            <!--                                                    <t t-out="record.assign_date.raw_value"/> Request-->
                                            <!--                                                </div>-->
                                            <!--                                            </div>-->
                                            <div class="badge badge-secondary" style="font-size:1.1em;" t-if="!selection_mode">
                                                <div class="badge badge-secondary" t-if="!selection_mode and record.assign_date.raw_value">
                                                    <!--                                                    <field name="assign_date" widget="date"/>-->
                                                </div>
                                            </div>
                                        </div>
                                        <div class="oe_kanban_bottom_right">
                                            <div class="o_kanban_inline_block" t-if="!selection_mode">
                                                <field name="activity_ids" widget="kanban_activity"/>
                                            </div>
                                            <t t-if="record.technician_user_id.raw_value!=false">
                                                <field name="technician_user_id" widget="many2one_avatar_user"/>
                                            </t>
                                        </div>
                                    </div>
                                </div>
                                <div class="oe_clear"></div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

    </data>
</odoo>
